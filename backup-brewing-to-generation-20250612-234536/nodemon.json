{
  "watch": ["src"],
  "ext": "ts,json",
  "ignore": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "node_modules/**/*",
    "dist/**/*",
    "logs/**/*",
    "uploads/**/*"
  ],
  "exec": "ts-node src/index.ts",
  "env": {
    "NODE_ENV": "development",
    "DEBUG": "td-buddy:*"
  },
  "delay": "1000",
  "verbose": true,
  "colours": true,
  "legacyWatch": false,
  "pollingInterval": 100,
  "runOnChangeOnly": false,
  "signal": "SIGTERM",
  "stdout": true,
  "events": {
    "start": "echo ' TD: ㄣ炽点笺笺璧峰俱...'",
    "restart": "echo ' TD: °ゃ澶淬妞ャ俱点笺笺璧峰俱...'",
    "crash": "echo ' TD: 点笺笺┿枫ャ俱寰╂с瑭裤俱...'",
    "exit": "echo ' TD: 点笺笺姝俱层俱с锛'"
  }
} 