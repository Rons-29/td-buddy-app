# QA Workbench Backend Environment Variables
# ЁЯН║ Brew Assistant уБМуВ╡уГЭуГ╝уГИуБЩуВЛQAуВиуГ│уВ╕уГЛуВвуБох░ВчФиф╜ЬценхП░

# ЁЯФС уВ╗уВнуГеуГкуГЖуВгшинхоЪ
PORT=3000
NODE_ENV=development
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-key

# ЁЯдЦ AI Assistant (Claude API)
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_MODEL=claude-3-sonnet-20240229
MAX_TOKENS=4000

# ЁЯОп QA Workbench уВ╖уВ╣уГЖуГашинхоЪ
# уГЗуГ╝уВ┐уГЩуГ╝уВ╣шинхоЪ
DATABASE_TYPE=sqlite
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=qa_user
DATABASE_PASSWORD=qa_password
DATABASE_NAME=qa_workbench
DATABASE_URL=file:./data/qa-workbench.db

# ЁЯУК уГнуВ░шинхоЪ
LOG_LEVEL=info
LOG_FILE_PATH=./logs/qa-workbench.log

# ЁЯУБ уГХуВбуВдуГлшинхоЪ
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=100MB

# ЁЯН║ BrewуВ╖уВ╣уГЖуГашинхоЪ
BREW_VERSION=1.0.0
BREW_BUILD_DATE=2025-06-12
BREW_MAINTENANCE_MODE=false

# ЁЯФз щЦЛчЩ║шинхоЪ
CORS_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ЁЯУИ чЫгшжЦуГ╗хИЖцЮР
ANALYTICS_ENABLED=false
ERROR_REPORTING_ENABLED=true

# ЁЯРЫ уГЗуГРуГГуВ░шинхоЪ
DEBUG=qa-workbench:*

# ЁЯМР уГХуГнуГ│уГИуВиуГ│уГЙшинхоЪ
FRONTEND_URL=http://localhost:3001
API_BASE_URL=http://localhost:3000/api 