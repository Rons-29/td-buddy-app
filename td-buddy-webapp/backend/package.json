{
  "name": "td-buddy-backend",
  "version": "1.0.0",
  "description": "TestData Buddy Backend - Express + TypeScript + SQLite",
  "private": true,
  "scripts": {
    "dev": "PORT=3001 nodemon src/index.ts",
    "dev:prod": "PORT=3001 NODE_ENV=production nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "db:setup": "ts-node src/scripts/init-db-simple.ts init",
    "db:init": "ts-node src/scripts/init-db.ts init",
    "db:reset": "ts-node src/scripts/init-db.ts reset",
    "db:cleanup": "ts-node src/scripts/init-db.ts cleanup",
    "db:stats": "ts-node src/scripts/init-db.ts stats",
    "db:backup": "ts-node src/scripts/init-db.ts backup",
    "db:help": "ts-node src/scripts/init-db.ts help"
  },
  "dependencies": {
    "@types/socket.io": "^3.0.1",
    "better-sqlite3": "^9.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "socket.io": "^4.8.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
