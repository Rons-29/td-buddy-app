{
  "name": "td-buddy-backend",
  "version": "1.0.0",
  "description": "TestData Buddy Backend - Express + TypeScript + SQLite",
  "private": true,
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "db:setup": "ts-node src/scripts/init-db-simple.ts init",
    "db:init": "ts-node src/scripts/init-db.ts init",
    "db:reset": "ts-node src/scripts/init-db.ts reset",
    "db:cleanup": "ts-node src/scripts/init-db.ts cleanup",
    "db:stats": "ts-node src/scripts/init-db.ts stats",
    "db:backup": "ts-node src/scripts/init-db.ts backup",
    "db:help": "ts-node src/scripts/init-db.ts help"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "better-sqlite3": "^9.2.2",
    "zod": "^3.22.4",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/better-sqlite3": "^7.6.8",
    "typescript": "^5.3.2",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16"
  }
} 